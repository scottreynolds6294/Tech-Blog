<body>
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit Post:</h3>

    <form class="form edit-post-form">
      <div class="form-group">
        <label for="title">Title:</label>
        <input class="form-input" type="text" id="edit-title" name="title" value="{{title}}" required>
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea class="form-input" id="edit-post-content" name="content" required>{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Edit Post</button>
      </div>
    </form>
  </div>
</div>
<script src="/js/dashboard.js"></script>
</body>