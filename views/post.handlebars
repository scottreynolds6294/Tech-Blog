<body>
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>{{this.title}}</h2>
    <p>
      Posted by {{this.user.username}} on {{format_date this.createdAt}}
    </p>
    <p>{{this.content}}</p>
  </div>
</div>

<div class="row mb-4" id="comments">
  <div class="col-md-5">
    <h3>Comments</h3>
    {{#each comments as |comment|}}
      <div class="comment">
        <p>{{comment.comment_text}}</p>
        <p>Posted by {{comment.user.username}} on {{format_date comment.createdAt}}</p>
      </div>
    {{/each}}
  </div>
</div>

{{#if logged_in}}
  <div class="row mb-4">
    <div class="col-md-5">
      <form class="form new-comment-form">
        <div class="form-group">
          <input type="hidden" id="post-id" value="{{id}}"">
          <label for="comment-text">Add your comment:</label>
          <textarea id="comment-text" name="comment_text" required></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>
{{else}}
  <p><a href="/login">Login</a> or <a href="/signup">Sign Up</a> to add a comment</p>
{{/if}}
<script src="/js/comments.js"></script>
</body>