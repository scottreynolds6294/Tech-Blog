<body>
<div class="row mb-4 post">
  <div class="col-md-12">
   <div class="post-header">
    <h2 class="post-title">{{this.title}}</h2>
    <p class="posted-by">
      Posted by {{this.user.username}} on {{format_date this.createdAt}}
    </p>
    </div>
    <p class="post-content">{{this.content}}</p>
  </div>
</div>


    <h3>Comments</h3>
     {{#each comments as |comment|}}
     <div class="row mb-4">
  <div class="col-md-12">
     <div class="comment-container">
    <div class="comment">
     <div class="comment-header">
    <p class="comment-by">Posted by {{comment.user.username}} on {{format_date comment.createdAt}}</p>
      </div>
        <p>{{comment.comment_text}}</p>
        </div>
        </div>
      </div>
    
</div>
    {{/each}}


{{#if logged_in}}
  <div class="row mb-4">
    <div class="col-md-12">
      <form class="form new-comment-form">
        <div class="form-group">
          <input type="hidden" id="post-id" value="{{id}}">
          <label for="comment-text">Add a comment:</label>
          <textarea id="comment-text" name="comment_text" required></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn">Add comment</button>
        </div>
      </form>
    </div>
  </div>
  </div>
{{else}}
  <p class="login-signup-homepage"><a href="/login">Login</a> or <a href="/signup">Sign Up</a> to add a comment</p>
{{/if}}
<script src="/js/comments.js"></script>
</body>