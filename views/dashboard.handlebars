<body>
  <h2> My Posts</h2>
  {{#if posts.length}}
  {{#each posts as |post| }}
  <div class="row mb-4 post post-list">
    <div class="col-md-5">
      <h2>{{post.title}}</h2>
      <p>{{post.content}}</p>
      <a href="/dashboard/edit/{{post.id}}" class="btn" id="edit-button">Edit</a>
      <button class="btn" id="delete-button" data-id="{{post.id}}">Delete</button>
    </div>
  </div>
  {{/each}}
{{else}}
  <p>No posts yet!</p>
{{/if}}
