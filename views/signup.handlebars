<body>
<div class="row">
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="username-signup">Create a Username:</label>
        <input class="form-input" type="text" id="username-signup" required />
      </div>
      <div class="form-group">
        <label for="password-signup">Create a Password:</label>
        <input class="form-input" type="password" id="password-signup" required />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
  </div>
</div>
<script src="/js/signup.js"></script>
</body>